<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wildchaos.eventdemo.ViewGroupA
        android:id="@+id/viewGroupA"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#e84e40">

        <com.wildchaos.eventdemo.ViewGroupB
            android:id="@+id/viewGroupB"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="#259b24">

            <com.wildchaos.eventdemo.ChildView
                android:id="@+id/childView"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:background="#03a9f4" />

        </com.wildchaos.eventdemo.ViewGroupB>

    </com.wildchaos.eventdemo.ViewGroupA>

    <TextView
        android:id="@+id/contentA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contentB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/contentC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>